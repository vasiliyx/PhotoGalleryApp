<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C443C"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">
    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/ivGallery"
        android:layout_width="wrap_content"
        android:layout_height="324dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/todo"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:scaleType="centerCrop" />

    <EditText
        android:id="@+id/captionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignStart="@id/takePhotoButton"
        android:layout_alignLeft="@id/takePhotoButton"
        android:layout_alignEnd="@id/viewPhotoButton"
        android:layout_alignRight="@id/viewPhotoButton"
        android:layout_below="@id/ivGallery"
        android:layout_marginTop="40dp"
        android:inputType="textCapSentences"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#000"
        android:hint="Enter a caption for your photo."
        android:gravity="center"
        android:textColorHint="#333"
        android:background="@drawable/et_rounded_style"/>

    <Button
        android:id="@+id/takePhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/captionEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:onClick="takePhotoClick"
        android:text="@string/snap"
        android:textStyle="bold" />

    <Button
        android:id="@+id/searchPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/takePhotoButton"
        android:layout_alignLeft="@id/takePhotoButton"
        android:layout_marginTop="25dp"
        android:onClick="searchPhotoClick"
        android:text="Search"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/viewPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/takePhotoButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:onClick="viewPhotoClick"
        android:text="View"
        android:textStyle="bold" />

    <Button
        android:id="@+id/unspecfiedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/searchPhotoButton"
        android:layout_alignEnd="@id/viewPhotoButton"
        android:layout_alignRight="@id/viewPhotoButton"
        android:onClick="unspecifiedClick"
        android:text="TBD"
        android:textStyle="bold" />

    <Button
        android:id="@+id/leftButton"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/searchPhotoButton"
        android:layout_alignStart="@id/searchPhotoButton"
        android:layout_alignLeft="@id/searchPhotoButton"
        android:layout_marginTop="15dp"
        android:onClick="scrollPhotoLeftClick"
        android:text="left"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rightButton"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignTop="@id/leftButton"
        android:layout_alignEnd="@id/viewPhotoButton"
        android:layout_alignRight="@id/viewPhotoButton"
        android:onClick="scrollPhotoRightClick"
        android:text="right"
        android:textStyle="bold" />



</RelativeLayout>